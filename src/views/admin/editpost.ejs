<%- include('static/head.ejs', { bot,user,path}) %>
<div id="content" class="main-content">
    <br><br><br><br><br><br>
    <div class="container">


    <form method="POST">
        <div class="form-row mb-4">
            <div class="form-group col-md-4">
                <label for="inputEmail4">Post Name<span style="color:red">*</span></label>
                <input type="text" class="form-control" value="<%= koddata.postName %>" id="postname" name="postname" placeholder="" required>
            </div>
            <div class="form-group col-md-4">
                <label for="inputEmail4">Post Description<span style="color:red">*</span></label>
                <input type="text" class="form-control" id="postdesc" value="<%= koddata.postDesc %>" name="postdesc" maxlength="100" placeholder="" required>
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">Post Category<span style="color:red">*</span></label>
                <select id="category" name="category" class="form-control" required>
                    <option value="<%= koddata.postCategory %>" selected><%= koddata.postCategory %></option>
                    <option value="Javascript">Site Updates</option>
                    <option value="Python">Discord Updates</option>
                    <option value="HTML5">News</option>
                </select>
            </div>
            
        </div>
        <div class="form-group mb-4">
            <label for="inputAddress">Main (Optional)</label>
            <textarea type="text" class="form-control" id="main" name="main" placeholder=""><%= koddata.main %></textarea>
        </div>
        <!-- div style="float:right;" id="dynamicCheck">
            <input type="button" value="Create Command Input" class="btn btn-success" onclick="createNewElement();"/>
            <input type="button" value="Remove Command Input" class="btn btn-danger" onclick="removeElement();"/>
         </div>
         <br><br -->
         <div class="form-group">
            <label for="inputEmail4">Command</label>
            <textarea type="text" class="form-control" id="commands" value="<%= koddata.commands %>" name="commands" placeholder=""><%=koddata.commands%></textarea>
        </div>

            <div id="newElementId"></div>

      <button type="submit" class="btn btn-primary mt-3"><i class="fa fa-save"></i> Submit</button>
    </form>
</div>
<br><br><br><br><br><br><br><br><br><br><br><br><br>
<script>
function createNewElement() {
    // First create a DIV element.
	var txtNewInputBox = document.createElement('div');

    // Then add the content (a new input box) of the element.
    txtNewInputBox.innerHTML = `
    <div id="commandinput">
    <br><br>
        <div class="form-row mb-4">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Command Name (Optional)</label>
                <input type="text" class="form-control" id="commandsname" name="commandsname" maxlength="100" placeholder="">
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Command (Optional)</label>
                <textarea type="text" style="height: 120%;" class="form-control" id="commands" name="commands" placeholder=""></textarea>
            </div>
        </div>
    </div>
    `;

    // Finally put it where it is supposed to appear.
	document.getElementById("newElementId").appendChild(txtNewInputBox);
}
function removeElement() {
    var myobj = document.getElementById("commandinput");
  myobj.remove();
}
var urlParams = new URLSearchParams(window.location.search);
            if(urlParams.has('success') && urlParams.get('success')){
            Swal.fire({
             icon: 'success',
             title: 'Succesfull...',
             closeOnConfirm: false,
             text: urlParams.get('message'),
             footer: 'Copyright 2021 &copy Delicacy Monitoring - All right reserved.'
            }).then((result) => {
          if (result.isConfirmed) {
            window.location.href = '/admin/posts';
          }
        })
            }
            if(urlParams.has('error') && urlParams.get('error')){
            Swal.fire({
             icon: 'error',
             title: 'Oops...',
             text: urlParams.get('message'),
             footer: 'Copyright 2021 &copy Delicacy Monitoring - All right reserved.'
            }).then((result) => {
          if (result.isConfirmed) {
            window.location.href = '/admin/posts';
          }    
        })
            }
</script>
</div></div>
